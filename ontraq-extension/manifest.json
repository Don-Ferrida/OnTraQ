{
  "manifest_version": 3,
  "name": "OnTraQ",
  "version": "1.0",
  "description": "Track and report your website usage productivity.",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["http://localhost:5001/"],
  "icons": {
    "16": "icons/icon.png"
  }
}
